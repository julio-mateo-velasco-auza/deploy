---
export const prerender = true;

import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Tu hero público (vídeo/foto pública)
import HomeHero from '../components/HomeHero.astro';
---

<Base title="Inbolsa · Home">
  <Header transparent={true} />
  <HomeHero />

  {/* Resto de secciones públicas normales */}
  <section class="px-6 py-16">
    <div class="mx-auto max-w-7xl grid gap-10 md:grid-cols-3">
      <div>
        <h3 class="text-xl font-semibold">Valores</h3>
        <p class="mt-2 text-slate-600">Compromiso con la calidad, innovación y servicio.</p>
      </div>
      <div>
        <h3 class="text-xl font-semibold">Industrias</h3>
        <p class="mt-2 text-slate-600">Soluciones para múltiples industrias.</p>
      </div>
      <div>
        <h3 class="text-xl font-semibold">Historia</h3>
        <p class="mt-2 text-slate-600">Desde 1974, tejiendo calidad en polipropileno.</p>
      </div>
    </div>
  </section>

  <Footer />
</Base>
